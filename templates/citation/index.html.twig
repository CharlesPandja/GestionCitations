{% extends 'base.html.twig' %}

{% block title %}Citation Index{% endblock %}

{% block body %}
    <h1 class="title">Liste des citations</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for citation in citations %}
            <tr>
                <td>{{ citation.id }}</td>
                <td>{{ citation.texte }}</td>
                <td>{{ citation.auteur }}</td>
                <td>
                    <a href="{{ path('app_citation_show', {'id': citation.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                    <a href="{{ path('app_citation_edit', {'id': citation.id}) }}" class="btn btn-warning btn-sm">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucune citation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('app_citation_new') }}" class="btn btn-success">Créer une nouvelle citation</a>
{% endblock %}

{% block stylesheets %}
<style>
    .title {
        text-align: center;
        margin-bottom: 20px;
        color: black;
    }

    .table {
        width: 80%;
        margin: 0 auto;
        border-collapse: collapse;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        padding: 12px 15px;
        border: 1px solid #ddd;
        text-align: left;
    }

    .table thead {
        background-color: #f8f8f8;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn {
        padding: 8px 12px;
        margin-right: 5px;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .btn-info {
        background-color: #5bc0de;
        color: white;
    }

    .btn-info:hover {
        background-color: #31b0d5;
    }

    .btn-warning {
        background-color: #f0ad4e;
        color: white;
    }

    .btn-warning:hover {
        background-color: #ec971f;
    }

    .btn-success {
        display: block;
        width: 200px;
        margin: 20px auto;
        background-color: #5cb85c;
        color: white;
        text-align: center;
    }

    .btn-success:hover {
        background-color: #4cae4c;
    }

    .text-center {
        text-align: center;
    }
</style>
{% endblock %}