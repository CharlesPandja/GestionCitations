{% extends 'base.html.twig' %}

{% block title %}Éditer la citation{% endblock %}

{% block body %}
    <h1>Éditer la citation</h1>

    {% block form_start %}
        <form action="{{ path('app_citation_edit', {'id': citation.id}) }}" method="post" class="form-citation">
            {{ form_start(form) }}
    {% endblock %}

    {% block form_body %}
        <div class="form-group">
            {{ form_label(form.texte, 'Citation', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.texte, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.texte) }}
        </div>

        <div class="form-group">
            {{ form_label(form.auteur, 'Auteur', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.auteur) }}
        </div>

        <button type="submit" class="btn btn-primary">Mettre à jour</button>
    {% endblock %}

    {% block form_end %}
            {{ form_end(form) }}
        </form>
    {% endblock %}
    <form>
    <button class="btn btn-info">
    <a href="{{ path('app_citation_index') }}">Retour à la liste</a>
    </button>
    </form>

    {% block stylesheets %}
    <style>
        h1{
            text-align: center;
            color: black;
        }
        .form-citation {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            background: #f9f9f9;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-label {
            display: block;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.5rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-primary {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
    </style>
    {% endblock %}
{% endblock %}